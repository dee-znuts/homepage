{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true,
		"defaultBranch": "main"
	},
	"files": {
		"ignoreUnknown": true,
		"includes": ["**", "!**/.astro", "!**/package.json", "!**/dist", "!**/*.d.ts"]
	},
	"formatter": {
		"lineWidth": 100,
		"lineEnding": "lf"
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"trailingCommas": "es5"
		}
	},
	"json": {
		"formatter": {
			"indentStyle": "tab"
		}
	},
	"assist": { "actions": { "source": { "organizeImports": "on" } } },
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noExplicitAny": "warn",
				"noImplicitAnyLet": "info",
				"noAssignInExpressions": "off"
			},
			"style": {
				"noNonNullAssertion": "off",
				"noParameterAssign": "off",
				"useSingleVarDeclarator": "info",
				"noDescendingSpecificity": "off"
			},
			"complexity": {
				"noForEach": "off",
				"noImportantStyles": "off"
			},
			"performance": {
				"noDynamicNamespaceImportAccess": "off"
			},
			"correctness": {
				"useHookAtTopLevel": "off"
			}
		}
	},
	"overrides": [
		{
			"includes": ["**/*.astro"],
			"linter": {
				"rules": {
					"correctness": {
						"noUnusedImports": "off",
						"noUnusedVariables": "off"
					},
					"style": {
						"useConst": "off",
						"useImportType": "off"
					}
				}
			}
		}
	]
}
